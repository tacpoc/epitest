@model PreviewModel

@foreach(var area in Model.Areas)
{
    if(area.Supported)
    {
        @Html.Partial("TemplateHint", string.Format(@Html.Translate("/preview/" + area.AreaName), Model.PreviewContent.Name))
        @Html.DisplayFor(x => area.ContentArea, new {Tag = area.AreaTag, CssClass = "row preview clearfix"})
    }
    else
    {
        @Html.Partial("TemplateHint", string.Format(@Html.Translate("/preview/norenderer/" + area.AreaName), Model.PreviewContent.Name))
    }
}

@if(!Model.Areas.Any())
{
    @Html.Partial("TemplateHint", string.Format(@Html.Translate("/preview/norenderer/atall"), Model.PreviewContent.Name))
}