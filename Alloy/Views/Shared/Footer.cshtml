@model IPageViewModel<SitePageData>
<div class="row">
    <div class="span12 footer">
        <hr />
        <div class="row">
            <div class="span3">
                <h3>@Html.Translate("/footer/products")</h3>
                <ul>
                    @foreach(var page in Model.Layout.ProductPages)
                    {
                        <li>@Html.PageLink(page)</li>
                    }
                </ul>
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/company")</h3>
                <ul>
                    @foreach(var page in Model.Layout.CompanyInformationPages)
                    {
                        <li>@Html.PageLink(page)</li>
                    }
                </ul>
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/news")</h3>
                <ul>
                    @foreach(var page in Model.Layout.NewsPages)
                    {
                        <li>@Html.PageLink(page)</li>
                    }
                </ul>
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/customerzone")</h3>
                <ul>
                    @foreach(var page in Model.Layout.CustomerZonePages)
                    {
                        <li>@Html.PageLink(page)</li>
                    }
                    <li>
                        @if(Model.Layout.LoggedIn)
                        {
                            @Html.ActionLink(Html.Translate("/footer/logout"), "Logout")
                        } 
                        else
                        {
                            <a href="@Model.Layout.LoginUrl" title="@Html.Translate("/footer/login")">@Html.Translate("/footer/login")</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
